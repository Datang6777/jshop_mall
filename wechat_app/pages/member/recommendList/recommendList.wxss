/* pages/member/recommendList/recommendList.wxss */
.recommend-content{
  padding: 20rpx 20rpx 0;
  overflow: hidden;
}
.user-img{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  float: left;
}
.content-right{
  display: inline-block;
  width: 580rpx;
  margin-left: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #f2f2f2;
}
.user-name{
  display: block;
  font-size: 26rpx;
  margin-bottom: 10rpx;
}
.user-num{
  display: block;
  color: #666;
  margin-bottom: 10rpx;
  font-size: 26rpx;
}
.user-time{
  display: block;
  color: #999;
  font-size: 24rpx;
  margin-bottom: 10rpx;
}
.loading{
  text-align:center;
  font-size:28rpx;
  margin:20rpx 0;
  color:#999;
}
.none-img{
  margin: 100rpx auto;
  text-align: center;
}
.none-img image{
  width: 200rpx;
  height: 200rpx;
}
.none-img text{
  display: block;
  color:#bbb;
  font-size:32rpx;
}