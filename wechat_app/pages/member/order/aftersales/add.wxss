.content {
 width: 700rpx;
 padding: 25rpx 25rpx 15rpx;
 line-height: 44rpx;
 margin-right:0;
 -webkit-transition: all 0.4s;
 transition: all 0.4s;
 -webkit-transform: translateX(240rpx);
 transform: translateX(240rpx);
